<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Frame Image"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/oltimage1"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/uploadimage1"
        android:tag="iucchasis"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:onClick="selectgallerywall1"
        android:text="Upload" />

        <Button
            android:id="@+id/uploadimage2"

            android:tag="iucchasis"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="selectcamera"
            android:text="Camera" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Power Cable at each termination point Breaker,SPD and IUC"

        android:textAlignment="center" />

    <ImageView
        android:id="@+id/powercableimage"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/uploadimage3"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="selectgallerywall1"
            android:tag="power1"
            android:text="Upload" />

        <Button
            android:id="@+id/uploadimage4"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="selectcamera"
            android:tag="power1"
            android:text="Camera" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="IUC for uplink"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/iucuplinkimage"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/uploadimage5"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="selectgallerywall1"
            android:text="Upload"
            android:tag="uplinkiuc"/>

        <Button
            android:id="@+id/uploadimage6"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="selectcamera"
            android:text="Camera"
            android:tag="uplinkiuc"/>

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="At TM FTB,at FOC (Custome)"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/ftbfocimage"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/uploadftb"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="selectgallerywall1"
            android:text="Upload"

            android:tag="ftbfoc"/>

        <Button
            android:id="@+id/uploadcameraftb"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="selectcamera"
            android:text="Camera"
            android:tag="ftbfoc"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="At TM FTB,at FOC (Custome)"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/epenpeimage"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/uploadepenpe"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="selectgallerywall1"
            android:text="Upload"

            android:tag="epenpe"/>

        <Button
            android:id="@+id/uploadcameraepenpe"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="selectcamera"
            android:text="Camera"
            android:tag="epenpe"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="At FDF inclusive of intertie - at FOC"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/fdffocimage"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/uploadfdf"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="selectgallerywall1"
            android:text="Upload"

            android:tag="fdffoc"/>

        <Button
            android:id="@+id/uploadcamerafdf"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:onClick="selectcamera"
            android:text="Camera"
            android:tag="fdffoc"/>

    </LinearLayout>
</LinearLayout>

</ScrollView>