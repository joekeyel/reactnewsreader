<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="500dp">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:ems="10"
        android:id="@+id/cabinetidtaglocation"
        android:hint="Cabinetid/DP/Mainhole"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/edittexttop"
        android:drawableLeft="@mipmap/ic_person_image2"
        android:paddingLeft="5dp"
        android:inputType = "numberPassword"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerelementtype"
        android:spinnerMode="dropdown"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/btn_dropdown"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagecaptureid"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />

        <Button
            android:id="@+id/capturebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capture Image" />
        <Button
            android:id="@+id/selectgalerybutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="Cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/canceltagcabinetdpmainhole"
                android:layout_weight="0.32" />
            <Button
                android:text="Tag Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btntagcabinetdpmainhole"
                android:layout_weight="0.32" />
        </LinearLayout>


    </LinearLayout>




</LinearLayout>