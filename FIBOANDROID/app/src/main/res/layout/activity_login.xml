<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/holo_blue_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".login">


    <EditText
        android:id="@+id/usernameTv"
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:layout_above="@+id/passwordTv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/edittexttop"
        android:drawableLeft="@mipmap/ic_person_image2"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:text="" />

    <EditText
        android:id="@+id/passwordTv"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/edittextbottom"
        android:contentDescription="@string/phone"
        android:drawableLeft="@mipmap/password"
        android:hint="Password"
        android:inputType="textPassword"
        android:linksClickable="false"
        android:paddingLeft="5dp"
        android:phoneNumber="true"
        android:text="" />

    <TextView
        android:id="@+id/loginstatusdisplaytv"
        android:layout_width="match_parent"
        android:layout_height="59dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        android:onClick="loginaction"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:id="@+id/tvregisteruser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/usernameTv"
        android:layout_marginBottom="145dp"
        android:clickable="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:onClick="gotoregister"
        android:text="Register New User" />

    <TextView
        android:id="@+id/tvforgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/usernameTv"
        android:layout_marginBottom="116dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Forget Password?"
        android:onClick="forgetpassword"/>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="fill_parent"
            android:layout_height="80dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"


            android:layout_marginTop="5dp"
            android:allowUndo="false"
            android:background="@drawable/buttonlogin"
            android:onClick="loginaction"
            android:text="Sign In"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>




</RelativeLayout>